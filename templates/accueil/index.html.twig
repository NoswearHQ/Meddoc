{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}


    {% include 'header.html.twig' %}
    <section class="team spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="section-title">
                        <span>Notre équipe</span>
                        <h2>Nos médecins experts</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                {% for Doc in Docteurs %}
                    <div class="col-lg-4 col-md-6 col-sm-6">
                        <div class="team__item">
                            <img  src="{{ asset('UsersProfileImgs/'~Doc.avatar)}}"   alt="">
                            <h5>Dr.{{ Doc.nom }}&nbsp;{{ Doc.prenom }}</h5>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
    <div class="gallery">
        <div class="gallery__container">
            <div class="grid-sizer"></div>
            <div class="gc__item set-bg" >
                <img src="{{ asset('AccueilImgs/1.jpg')}}">
            </div>
            <div class="gc__item set-bg" >
                <img src="{{ asset('AccueilImgs/2.jpg')}}">
            </div>
            <div class="gc__item set-bg" >
                <img src="{{ asset('AccueilImgs/3.jpg')}}">
            </div>
            <div class="gc__item set-bg" >
                <img src="{{ asset('AccueilImgs/4.jpg')}}">
            </div>
            <div class="gc__item set-bg" >
                <img src="{{ asset('AccueilImgs/5.png')}}">
            </div>
            <div class="gc__item set-bg" >
                <img src="{{ asset('AccueilImgs/6.jpg')}}">
            </div>
            <div class="gc__item set-bg" >
                <img src="{{ asset('AccueilImgs/7.jpg')}}">
            </div>
            <div class="gc__item set-bg" >
                <img src="{{ asset('AccueilImgs/8.jpg')}}">
            </div>

        </div>
    </div>
    {% include 'footer.html.twig' %}
{% endblock %}
